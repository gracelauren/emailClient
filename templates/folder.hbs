<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6">


  <h1>{{name}}</h1>

    <ul>
      {{#each email in emails}}
      <li><h4> To: {{email.recipient}} </h4></li>
      <li><h5> {{#link-to 'show-email' email}} {{email.subject}} {{/link-to}} </h5></li>
      {{/each}}
    </ul>
  </div>
 <div class="col-lg-6 col-md-6 col-sm-6">
  {{outlet}}
 </div>

</div>
<div class="row">

{{#if isAdding}}
  <h2>Create an E-mail to be Archived in {{name}}</h2>
  <form>
    <div class="form-group">
      {{input value=recipient id="recipient" classNames="form-control" placeholder="To"}}
      {{input value=subject id="subject" classNames="form-control" placeholder="Subject"}}
      {{textarea rows=5 value=body id="body" classNames="form-control" placeholder="Body"}}
    </div>
    <button class="btn btn-primary" {{action "save"}}>Send E-mail</button>
  </form>
{{else}}
  <button class="btn btn-primary" {{action "add"}}>Compose</button>
  <button class="btn btn-warning" {{action 'delete'}}>Delete</button>
{{/if}}
</div>
